<%= render "shared/header" %>
<div data-turbo="false">
  <div class='account-page' id='account-page'>
    <div class='account-page__inner clearfix'>
      <div class='account-page__inner--left account-page__header'>
        <h2>Log in</h2>
        <h5>登録しているユーザーでログイン</h5>
        <%= render "devise/shared/links"%>
      </div>
      <div class='account-page__inner--right user-form'>
        <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
        <%= render 'shared/error_messages', model: resource %>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :email%>
            </div>
            <div class='field-input'>
              <%= f.email_field :email, autofocus: true%>
            </div>
            <div class='field'>
              <div class='field-label'>
                <%= f.label :password%>
                <i>(英数字6文字以上)</i>
              </div>
              <div class='field-input'>
                <%= f.password_field :password, autocomplete: "off"%>
              </div>
            </div>
            <div class='actions'>
              <%= f.submit "Log in", class: 'btn'%>
            </div>
          </div>
        <% end %>
        <div class="sub-omniauth-authorize">
    <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "google-omniauth" do %>
      <%= image_tag('web_light_rd_SI@1x.png', alt: 'Google アイコン', class: 'google-icon') %>
    <% end %>
    </div>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
