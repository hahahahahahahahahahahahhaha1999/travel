<header class="header">
  <div class="header__bar row">
    <h1 class="grid-6"><a href="/">旅行日記</a></h1>
    <% if user_signed_in? %>
      <div class="user_nav grid-6">
        <span><%= current_user.nickname %>さん
          <ul class="user__info">
            <li>
              <%= link_to "マイページ", edit_user_path(current_user) %>
            </li>
            <li>
              <%= link_to "お気に入り", user_likes_path(current_user) %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :get %>
            </li>
          </ul>
        </span>
      </div>
    <% else %>
      <div class="grid-6">
        <%= link_to "ログイン", new_user_session_path, class: "post" %>
        <%= link_to "新規登録", new_user_path, class: "post" %>
      </div>
    <% end %>
  </div>
</header>